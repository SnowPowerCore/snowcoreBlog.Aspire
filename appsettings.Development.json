          }
        ]
      },
      "backend-servicenotifications-scalar": {
        "ClusterId": "backend-servicenotifications",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/notifications/scalar/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/notifications"
          }
        ]
      },
      "backend-servicenotifications-ping": {
        "ClusterId": "backend-servicenotifications",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/notifications/ping/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/notifications"
          }
        ]
      },
      "backend-servicenotifications-active": {
        "ClusterId": "backend-servicenotifications",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/notifications/active/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/notifications"
          }
        ]
      },
      "backend-servicenotifications": {
        "ClusterId": "backend-servicenotifications",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/notifications"
          }
        ]
      }
    }
  }
}